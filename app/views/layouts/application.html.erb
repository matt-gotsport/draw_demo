<!DOCTYPE html>
<html>
  <head>
    <title>Demo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body class="theme-success">
    <nav class="app-navbar p-l-lg p-r-md success in" id="app-navbar">
      <div class="pull-left" id="navbar-header">
        <h5 class="visible-md-inline-block visible-lg-inline-block m-l-md" id="page-title"><%= yield(:page_title)%> </h5>
      </div>
      <div class="pull-right">
        <h5 class="visible-md-inline-block visible-lg-inline-block m-l-md">GotPro Draw Assist</h5>
      </div>
    </nav>
    <main class="app-main in" id="app-main">  
      <div class='schedule-subnav bg-white'>
        <ul class='nav nav-pills'>
          <li class=''><%= link_to 'Home', root_path %></li>
          <li class=''><%= link_to 'Teams', teams_path %></li>
          <li class=''><%= link_to 'Groups', groups_path %></li>
        </ul>
      </div>
      <div class='wrap'>
        <section class='app-content'>
          <%= yield %>
        </section>
      </div>
    </main>
  </body>
</html>
