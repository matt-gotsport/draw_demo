  <div>
    <% if group.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>
  
        <ul>
          <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  
  <%= form_with(model: group, local: true) do |form| %>
    <div class="field">
      <%= form.label :draw_definition_id %>
      <%= form.collection_select(:draw_definition_id, DrawDefinition.all, :id, :name, {:include_blank => "Not Associated"}) %>
    </div>
  
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :image_file %>
      <%= form.text_field :image_file %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  <% end %>  
